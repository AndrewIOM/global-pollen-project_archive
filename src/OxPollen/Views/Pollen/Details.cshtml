@model PollenRecord

@{
    ViewBag.Title = "Grain Details #" + Model.PollenRecordId;
    var timeSinceAdd = DateTime.Now - Model.TimeAdded;
}

<div class="row">
    <h1>Unidentified Pollen Grain #@Model.PollenRecordId</h1>
</div>
<div class="row">
    <div class="col-md-5">
        <img src="@Model.PhotoUrl" style="width:100%; height:100%" />
    </div>
    <div class="col-md-5">
        <p>Added @timeSinceAdd.Days.ToString() days ago.</p>
        <p>Approximate Age: @Model.ApproximateAge</p>
        <label>Location</label>
        <img style="text-align: left; margin-right: auto; display: block;" alt="Pollen Location" src="http://maps.google.com/maps/api/staticmap?center=@Model.Latitude,@Model.Longitude&amp;zoom=2&amp;size=300x200&amp;maptype=terrain&amp;markers=color:blue%7Clabel:Pollen%7C @Model.Latitude,@Model.Longitude&amp&amp;amp;sensor=false">
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" asp-controller="Pollen" class="btn btn-default" role="button">Back</a>
    </div>
</div>