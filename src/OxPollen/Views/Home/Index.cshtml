@model List<OxPollen.ViewModels.ReadOnlyGrainViewModel>

@{
    ViewData["Title"] = "Home";
}

@* Header *@
@section homepageHeader {
    <header class="homepage-header">
        <div class="container">
            <h1>OxPollen</h1>
            <p>The Open Platform for Pollen Identification</p>
        </div>
    </header>
}

@* Marketing *@
<div class="row" style="text-align:center">
    <div class="col-sm-4">
        <img class="img-circle img-responsive home-tri-image" src="~/images/pollen1.png" alt="">
        <h3><a asp-action="Help" asp-controller="Grain">Submit Your Pollen Grains</a></h3>
        <p>If you are having trouble identifying a pollen grain to family, genus or species level, submit your grain to OxPollen. Crowd source the identification from others working with pollen across the world.
</p>
    </div>
    <div class="col-sm-4">
        <img class="img-circle img-responsive home-tri-image" src="~/images/pollen2.jpg" alt="">
        <h3><a asp-action="Index" asp-controller="Grain">Add Your Expertise</a></h3>
        <p>Are you a specialist in a particular region or taxon? Help others by providing identifications and earn points on the leader board for your lab group or Institution.</p>
    </div>
    <div class="col-sm-4">
        <img class="img-circle img-responsive home-tri-image" src="~/images/pollen3.png" alt="">
        <h3><a asp-action="Index" asp-controller="Taxon">Search Our Reference Collection</a></h3>
        <p>Browse the dynamic and ever expanding reference collection of OxPollen! Use as a key or as a reference for your own research.</p>
    </div>
</div>
<hr />

@* About OxPollen *@
<div class="row">
    <div class="col-sm-8">
        <h2>How It Works</h2>
        <p>Whether you are submitting a grain or identifying someone else’s you are contributing to the fastest growing crowd sourced palanological database in the world! Once a grain has been identified by a minimum of 3 individuals at a certainty of at least 75% it will be added into the digital OxPollen Reference Collection. This collection is paired with the Global Biodiversity Information Facility (GBIF) and Neotoma, enabling you to see current and past distributions.</p>
        <p>
            <a asp-action="Index" asp-controller="Grain" class="btn btn-default btn-lg">Get Started »</a>
        </p>
    </div>
    <div class="col-sm-4">
        <h2>Most Wanted</h2>
        <p>Can you identify our most wanted pollen grains?</p>
        <ul class="grain-grid columns-8">
            @foreach (var grain in Model)
            {
                <li>
                    <a href="@Url.Action("Identify", "Grain", new { id = @grain.Id } )">
                        <div class="img-container">
                            <img src="~/user-image-uploads/@grain.ThumbnailLocation" />
                            <div class="ribbon"><span>@grain.Bounty</span></div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
<div class="row" style="text-align:center">
    <p>Banner Image by <em><a href="https://standingoutinmyfield.wordpress.com/2014/01/09/cool-things-ive-learned-about-pollen/">standingoutinmyfield</a></em>.</p>
</div>