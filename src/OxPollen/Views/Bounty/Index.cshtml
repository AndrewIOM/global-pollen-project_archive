@model OxPollen.ViewModels.BountyChartsViewModel

@{
    ViewBag.Title = "Bounty";
}

@* Header *@
<div class="row">
    <div class="col-md-12">
        <h1>Bounty</h1>
    </div>
</div>

@* Leaderboards *@
<div class="row">
    <div class="col-md-6">
        <h4>Top Users</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Bounty</th>
                </tr>
            </thead>
            @foreach (var user in Model.TopIndividuals)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Bounty</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <h4>Top Groups</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Bounty</th>
                </tr>
            </thead>
            @foreach (var org in Model.TopOrgs)
            {
                <tr>
                    <td>@org.Name</td>
                    <td>@org.Bounty</td>
                </tr>
            }
        </table>
    </div>
</div>