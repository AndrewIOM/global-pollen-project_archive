@model ReferenceGrain

@{
    ViewBag.Title = Model.Taxon.LatinName;
    ViewBag.Subtitle = "Digitised Reference Slide in the collection: " + Model.Collection.Name;
    var timeSinceAdd = DateTime.Now - Model.TimeAdded;

    string species = null;
    string genus = null;
    string family = null;
    if (Model.Taxon != null)
    {
        if (Model.Taxon.Rank == Taxonomy.Species)
        {
            species = Model.Taxon.LatinName;
            genus = Model.Taxon.ParentTaxa.LatinName;
            family = Model.Taxon.ParentTaxa.ParentTaxa.LatinName;
        }
        else if (Model.Taxon.Rank == Taxonomy.Genus)
        {
            genus = Model.Taxon.LatinName;
            family = Model.Taxon.ParentTaxa.LatinName;
        }
        else
        {
            family = Model.Taxon.LatinName;
        }
    }
}

@section scripts {
    <link rel="stylesheet" href="~/lib/nouislider/distribute/nouislider.min.css"> @* TODO Move this *@
    <script src="~/lib/nouislider/distribute/nouislider.min.js"></script>
    <script type="text/javascript" src="~/js/reference/GrainImageCanvas.js"></script>
}

@* Header *@
@section homepageHeader {
    <div class="addgrain-section headsection">
        <div class="container">
            <h2>@ViewData["Title"]</h2>
            <p>@ViewData["Subtitle"]</p>
        </div>
    </div>
    <br />
}

@* Breadcrumb *@
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a asp-action="Index" asp-controller="Reference">Physical Collections</a></li>
            <li><a href="@Url.Action("Collection", "Reference", new { id = Model.Collection.Id })">@Model.Collection.Name</a></li>
            <li class="active">Grain #@Model.ReferenceGrainId</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-book"></span> Details</div>
            <div class="panel-body">
                <h4>Taxonomy</h4>
                <label>Family</label>
                @if (string.IsNullOrEmpty(family))
                {
                    <p>Unknown</p>
                }
                else
                {
                    <p>@genus</p>
                }
                <label>Genus</label>
                @if (string.IsNullOrEmpty(genus))
                {
                    <p>Unknown</p>
                }
                else
                {
                    <p>@species</p>
                }
                <label>Species</label>
                @if (string.IsNullOrEmpty(species))
                {
                    <p>Unknown</p>
                }
                else
                {
                    <p>@species</p>
                }
                <hr />
                <h4>Additional Details</h4>
                <label>Maximum Diameter</label>
                <p>@Model.MaxSizeNanoMetres micrometres</p>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading"><span class="glyphicon glyphicon-picture"></span> Images</div>
            <div class="panel-body">
                <div class="zoom-canvas-container">
                    <canvas id="displayCanvas" class="zoom-canvas"></canvas>
                    <div id="focusSlider"></div>
                </div>
                <hr />
                <div id="zoom-thumbs" class="image-thumbnails" style="height:5em;overflow:hidden;">
                    @foreach (var image in Model.Images)
                    {
                        @if (image.IsFocusImage)
                        {
                            <a onclick="return changeImage(this);" style="position:absolute;height:5em;">
                                <img src="@image.FocusLowUrl" hidden="hidden" />
                                <img src="@image.FocusMedLowUrl" hidden="hidden" />
                                <img src="@image.FocusMedUrl" style="width:auto; height:5em;display:inline-block" />
                                <img src="@image.FocusMedHighUrl" hidden="hidden" />
                                <img src="@image.FocusHighUrl" hidden="hidden" />
                                <span class="glyphicon glyphicon-eye-open focus-icon"></span>
                            </a>
                        }
                        else
                        {
                            <a onclick="return changeImage(this);"><img src="@image.FileName" style="width:auto; height:5em;display:inline-block" /></a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

