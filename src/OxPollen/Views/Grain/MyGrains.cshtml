@model List<OxPollen.ViewModels.ReadOnlyGrainViewModel>
@{
    ViewBag.Title = "My Grains";
}

@section homepageHeader {
<div class="addgrain-section headsection">
    <div class="container">
        <h2>My Grains</h2>
        <p>Intro blurb about viewing the status of your submissions and editing them.</p>
    </div>
</div>
}

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>First Image</td>
                    <td>Time Added</td>
                    <td>Current Status</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><img src="@item.ImageLocation" style="width:5em;height:auto" /></td>
                        <td>@item.TimeAdded</td>
                        <td>TODO: Status</td>
                        <td>
                            <a href="@Url.Action("Delete", "Grain", new { id = @item.Id })" class="btn btn-danger"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>